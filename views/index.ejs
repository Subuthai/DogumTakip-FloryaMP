<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doğum Takip Sistemi</title>
</head>
<style>
  body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }
    
    .center {
      text-align: center;
    }
    
    h1 {
      color: #333;
    }
    
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    table th, table td {
      padding: 10px;
      text-align: left;
    }
    
    table th {
      background-color: #333;
      color: #fff;
    }
    
    table tr:nth-child(even) {
      background-color: #dddddd;
    }
    </style>
<body>
  <div class="center">
    <h1>İ.A.Ü. VM Medical Park Florya Hastanesi</h1>
    <table>
      <thead>
        <tr>
          <th>Doktor</th>
          <th>Protokol Numarası</th>
          <th>Durum</th>
        </tr>
      </thead>
      <tbody>
        <% surgeries.forEach(surgery => { %>
          <tr>
            <td><%= surgery.doktor %></td>
            <td><%= surgery.protokol_no %></td>
            <td><%= surgery.durum %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script>
    setInterval(function() {
      location.reload();
    }, 5000);
  </script>
  <meta http-equiv="refresh" content="30">
</body>
</html>
